{{#if products.length}}
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    {{#each products}}
        <div class="col">
          <div class="card shadow-sm">
            <img src="{{image}}" alt="">
            <div class="card-body">
              <p class="card-text fw-bold">{{title}}</p>
              <div class="d-flex justify-content-between align-items-center">
                <p class="p-0 m-0">{{formatDate createAt}}</p>
                <small class="text-muted fs-5" >{{price}}.00$</small>
              </div>
            </div>
            <div class="card-footer">
              <div class="btn-group btn-group-sm" role="group" aria-label="Basic mixed styles example">
                <a type="button" class="btn btn-outline-primary" href="./product/{{_id}}">Details</a>
                {{#if @root.token}}
                  {{#ifequal user @root.userId}}
                    <a type="button" class="btn btn-outline-secondary m-0" href="/edit-product/{{_id}}">Edit</a>
                    <form action="/delete-product/{{_id}}" method="post" class="btn btn-outline-danger">
                      <button class="delete-btn">Delete</button>
                    </form>
                  {{/ifequal}}
                {{/if}}
              
              </div>
            </div>
          </div>
        </div>
    {{/each}}
  </div>
{{else}}
  <p>No products available</p>
{{/if}}
  
